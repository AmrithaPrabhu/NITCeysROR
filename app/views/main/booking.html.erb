<div class="main">
            <main class="col-md-1 ms-sm-auto col-lg-1 justify-content-center main">
                <!-- Change Password Form Inside Card -->
                <div class="card mt-1 justify-content-center" style="width:fit-content;margin-left:30%;">
                    <% if flash[:error] %>
                        <div class="alert alert-danger text-center"role="alert">
                        <%= flash[:error] %>
                        </div>
                    <% end %>
                    <div class="card-body text-center" style="width:min-content;">
                        <h2 class="card-title">Book Hall</h2>
                        <!-- Add a form here for changing the password -->
                        <%= form_with model: @hallbooking, url: bookHall_path, html: { style: "width: max-content;" } do |form| %>
                            <% if @name %>
                            <h5>Booking for Hall: <%= @name %></h5>
                            <% end %>
                            <% if @loc %>
                            <h5>Location: <%= @loc %></h5>
                            
                            <% end %>
                            
                            <br>
                            <div class="form-group text-left">
                                
                                <%= form.label :date, "Date<span class='required' style='color:red;'>*</span>".html_safe %>
                                <%= form.date_field :date_, class: "form-control", required: true %>
                                </div>
                            <br>
                            <div class="form-group text-left">
                                <%= form.label :StartTime, "Start Time<span class='required' style='color:red;'>*</span>".html_safe %>
                                <%= form.time_field :start_time, class: "form-control", required: true %>
                            </div>
                            <br>
                            <div class="form-group text-left">
                            <%= form.label :EndTime, "End Time<span class='required' style='color:red;'>*</span>".html_safe %>
                            <%= form.time_field :end_time, class: "form-control", required: true%>
                            </div>
                            <br>
                            <div class="form-group text-left">
                                <%= form.label :reason, "Reason<span class='required' style='color:red;'>*</span>".html_safe %>
                                <br>
                                <%= text_area_tag 'reason', nil, cols: 56, rows: 3, class: 'form-control', required: true %>
                            </div>
                            <br>
                            <%= form.submit "Request", class: "btn btn-primary" %>
                        <%end%>
                    </div>
                </div>
            </main>
        </div>